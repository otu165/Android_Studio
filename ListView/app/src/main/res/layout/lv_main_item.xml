<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgLvMainItem"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/txtLvMainItem1"
        android:text="title area"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgLvMainItem"
        app:layout_constraintBottom_toBottomOf="@id/imgLvMainItem"
        app:layout_constraintLeft_toRightOf="@id/imgLvMainItem"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/txtLvMainItem2"
        android:text="description area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgLvMainItem"
        app:layout_constraintBottom_toBottomOf="@id/imgLvMainItem"
        app:layout_constraintLeft_toRightOf="@id/imgLvMainItem"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_bias="0.7"/>
</androidx.constraintlayout.widget.ConstraintLayout>